@require 'cozy-ui'

.wizard
    background-color #33A6FF
    color white
    min-height 100vh
    display flex
    flex-direction column
    text-align center

    .wizard-main
        flex 1

    .wizard-button
        margin-bottom 30px

    .wizard-button--with-circles
        margin-bottom 10px

    .wizard-circles
        display flex
        justify-content center
        margin-bottom 5px

    .wizard-circles__circle
        width 15px
        height 15px
        margin 0 5px
        background rgba(0,0,0,.3)
        border-radius 50px
        transition all .3s ease

    .wizard-circles__circle--active
        bacground #297ef2

.welcome
    background-color white
    color            black

    img
        width 200px
        height 200px
        margin 0 auto

    h1
        color #748192

.activation
    background-color white
    color            black

    img
        width 200px
        height 200px
        margin 0 auto

.breadcrumb
    display inline

    span
        margin 0 5px
