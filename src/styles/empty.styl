@require 'cozy-ui'

.fil-empty
  text-align center
  &:before
    content     ''
    display     block
    margin      em(100px) auto 0
    width       em(160px)
    height      em(140px)
    background  embedurl("../assets/icons/icon-type-folder.svg") center center / cover no-repeat
  h2
    font-size(24px)
    margin         em(33px) auto 0
    line-height    1.3
    color          grey-08
    letter-spacing -0.2px
  p
    margin-top  em(5px)
    color       grey-11
    line-height 1.5
