@require 'cozy-ui'

$popover
    z-index          1000
    background-color white
    border           1px solid grey-09
    border-radius    4px
    box-shadow       0 1px 3px 0 rgba(50, 54, 63, 0.19), 0 6px 18px 0 rgba(50, 54, 63, 0.19)

    b-item:hover
    b-item:focus
        background-color grey-01
        outline          none

    hr
        margin     5px 0
        border     0
        border-top 1px solid grey-09

    a
        padding         em(8px) em(32px)
        left-padded(42px)
        cursor          pointer
        color           grey-08
        text-decoration none
        display         block
        white-space     nowrap

      &:hover
          text-decoration none
