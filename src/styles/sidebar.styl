@require 'cozy-ui'

.fil-sidebar
    width            em(220px)
    border-right     1px solid grey-09
    background-color grey-10
    justify-content  space-between

    .coz-btn--client
        @extend $button-client
        margin em(16px, 13px)

    @media (max-width: (1023/basefont)rem)
        border-top  1px solid grey-09
        border-left none

        .coz-btn--client
            display none
