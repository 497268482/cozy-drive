@require 'cozy-ui'

.fil-toolbar
  margin-left auto
  .coz-btn:last-child
    margin-right 0

b-menu-button
  position relative

b-menu-button > b-listbox
  display none
  position absolute

b-menu-button[open] > b-listbox
  display block

b-item
  display block

.fil-toolbar-menu
  right 0
  padding 5px 0
  margin 0
  z-index 1000
  background-color white
  margin-top 1px
  min-width 220px
  border 1px solid grey-09
  border-radius 4px
  box-shadow 0 1px 3px 0 rgba(50, 54, 63, 0.19), 0 6px 18px 0 rgba(50, 54, 63, 0.19)

  b-item:hover
  b-item:focus
    background-color grey-01
    outline none

  b-item[aria-selected='true']
    font-weight 600

  hr
    margin 5px 0
    border 0
    border-top 1px solid grey-09

  a
    padding em(8px) em(32px)
    left-padded(42px)
    cursor pointer
    color grey-08
    text-decoration none
    display block
    white-space nowrap

    &:hover
      text-decoration none
    &.fil-action-upload
      display none
      background: embedurl("../assets/icons/icon-upload-16.svg") em(16px) center no-repeat
    &.fil-action-newfolder
      background: embedurl("../assets/icons/icon-folder-add-16.svg") em(16px) center no-repeat
    &.fil-action-select
      background: embedurl("../assets/icons/icon-checkbox-16.svg") em(16px) center no-repeat


@media (max-width: (1023/basefont)rem)
  .fil-toolbar-menu
    a.fil-action-upload
      display block
